<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp">

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/disease_name_sheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="2"
                android:text="Disease Name"
                android:textColor="#444"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outbreak_tv"
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Outbreak"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center Name: "
                android:textColor="#444"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/center_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center Incharge: "
                android:textColor="#444"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/center_incharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center Incharge" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Outbreak Area"
            android:textColor="#444"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/center_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flat No 404, Skyline Apartments, Vizag - 500576" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email"
            android:textColor="#444"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/center_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gupta.rohan@live.com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#444"
            android:text="Precautions"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/precautions_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precautions Here"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#444"
            android:text="Symptoms"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/symptoms_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptoms Here"/>

        <Button
            android:id="@+id/center_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#000"
            android:foreground="?attr/selectableItemBackground"
            android:text="CALL HEALTH CENTER"
            android:textColor="#fff" />

    </LinearLayout>
</androidx.cardview.widget.CardView>