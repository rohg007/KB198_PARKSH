<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HealthCentersActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/health_center_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/health_centers_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/nearest_health_centers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locate_nearest"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        app:icon="@drawable/ic_baseline_my_location_24" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>